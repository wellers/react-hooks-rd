{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es6",
			"dom",
			"es2017",
			"es2019"
		],
		"noImplicitAny": false,
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,	
		"jsx": "react-jsx",
		"outDir": "build",
		"sourceMap": true
	},	
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}